datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Food {
  id           Int        @id @default(autoincrement())
  name         String
  rating       Float
  image        String
  restuarantId Int
  restuarant   Restuarant @relation(fields: [restuarantId], references: [id])
}

model Restuarant {
  id     Int              @id @default(autoincrement())
  name   String
  logo   String
  status RestuarantStatus

  foods Food[]
}

enum RestuarantStatus {
  OPEN_NOW
  CLOSED
}
